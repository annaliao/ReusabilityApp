<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.anna.reusabilityapp.MainActivity"
    tools:showIn="@layout/activity_main">

    <ListView
        android:id="@+id/listView"
        android:layout_width="400dp"
        android:layout_height="0dp"
        android:layout_marginBottom="12dp"
        android:text="Hello World!"
        app:layout_constraintBottom_toTopOf="@+id/Recycle"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/Recycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="3dp"
        android:text="Recycle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/Trash"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listView" />

    <Button
        android:id="@+id/Trash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trash"
        app:layout_constraintBaseline_toBaselineOf="@+id/Recycle"
        app:layout_constraintEnd_toStartOf="@+id/Compost"
        app:layout_constraintStart_toEndOf="@+id/Recycle" />

    <Button
        android:id="@+id/Compost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Compost"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/Trash"
        app:layout_constraintTop_toBottomOf="@+id/Recycle"
        app:layout_constraintVertical_bias="0.857" />

</android.support.constraint.ConstraintLayout>
